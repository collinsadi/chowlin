<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Login</title>
    <%- include("../partials/universal/styles.ejs") %>
    <link rel="stylesheet" href="/styles/vendor/login.css">
    <link rel="stylesheet" href="/styles/alert/alert.css">


</head>
<body>
    

    <div class="page-container">


        <div class="login-left">

            <div class="login-left-inner">

            <div class="login-title">

            <h3>Welcome Back Vendor </h3>

            </div>


            <div id="loginsect" class="login-form">


                <div class="form-group">

                    <!-- <p>Email</p> -->

                    <div class="form-cont">

                        <div class="input-icon">
                        <i class="fa-regular fa-envelope"></i>
                        </div>
                        <input id="email" autocomplete="off" placeholder="Email" name="Email" type="text">
                    </div>

                </div>
                <div class="form-group">

                    <!-- <p>Email</p> -->

                    <div class="form-cont">

                        <div class="input-icon">
                        <i class="fa-solid fa-lock"></i>
                        </div>
                        <input id="password" autocomplete="off" placeholder="Password" name="Password" type="password">
                    </div>

                </div>

                <div class="student">
                    <input id="keeplogged" type="checkbox">
                    <p>Remember Device </p>
                </div>

                <div class="form-group">
                    <button id="log_user_in">Log in</button>
                </div>

                <!-- <div class="agree">
                    <input type="checkbox" name="" id="">
                    <p>I agree to Chowlin Terms of Service and Privacy Policy</p>
                </div> -->

                <div class="new-here">
                    <p>Don't Have an Account? <a href="/vendor/signup.php">Sign Up!</a></p>
                </div>















            </div>
            <div id="finalStep" class="login-form">

                <div class="step">

                    <p>Verify Email to Continue</p>
                    <!-- <p>An Error Occured</p> -->

                </div>

                <div class="form-group">

           

                    <div class="form-cont">

                        <div class="input-icon">
                        <i class="fa-solid fa-envelope"></i>
                        </div>
                        <input id="email_code" autocomplete="off" placeholder="6 Digit Code" name="otp" type="number">
                    </div>

                </div>
             
               



                <div class="form-group">
                    <button id="verify-step">Verify</button>
                </div>

               














            </div>








            </div>



        </div>










        <div class="login-right"> </div>

    <%- include("../partials/alert/alert.ejs") %>


    </div>


    <%- include("../partials/universal/scripts.ejs") %>
    <script src="/scripts/alert/alert.js"></script>
    <script src="/scripts/vendor/login.js"></script>

    
</body>
</html>